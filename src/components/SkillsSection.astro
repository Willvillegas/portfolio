---
import IconContainer from "@components/IconContainer.astro";
import Css from "@assets/icons/css.astro";
import Javascript from "@assets/icons/javascript.astro";
import React from "@assets/icons/react.astro";
import Html from "@assets/icons/html.astro";
import Tailwind from "@assets/icons/tailwind.astro";
import AstroIcon from "@assets/icons/astro.astro";
import Express from "@assets/icons/express.astro";
import Node from "@assets/icons/node.astro";
import Mysql from "@assets/icons/mysql.astro";
import Postgresql from "@assets/icons/postgresql.astro";
import Bash from "@assets/icons/bash.astro";
import Git from "@assets/icons/git.astro";
import Github from "@assets/icons/github.astro";
import Vscode from "@assets/icons/vscode.astro";
import Figma from "@assets/icons/figma.astro";
import Angular from "@assets/angular.astro";
import Mongodb from "@assets/mongodb.astro";
import Mssql from "@assets/mssql.astro";
import C from "@assets/c.astro";
import Cpp from "@assets/cpp.astro";
import Java from "@assets/java.astro";
import Python from "@assets/python.astro";
import Rust from "@assets/rust.astro";
import Typescript from "@assets/typescript.astro";
---

<section class="my-20">
  <h2 class="text-2xl font-semibold mb-1">Habilidades</h2>
  <hr class="mb-6 border-zinc-600" />

  <h3 class="text-xl font-medium mb-4">Lenguajes</h3>
  <div class="flex flex-wrap gap-5">
    <IconContainer name="C">
      <C size="size-9" />
    </IconContainer>
    <IconContainer name="C++">
      <Cpp size="size-9" />
    </IconContainer>
    <IconContainer name="HTML">
      <Html size="size-9" />
    </IconContainer>
    <IconContainer name="CSS">
      <Css size="size-9" />
    </IconContainer>
    <IconContainer name="Javascript">
      <Javascript size="size-9" />
    </IconContainer>
    <IconContainer name="Typescript">
      <Typescript size="size-9" />
    </IconContainer>
    <IconContainer name="Java">
      <Java size="size-9" />
    </IconContainer>
    <IconContainer name="Python">
      <Python size="size-9" />
    </IconContainer>
    <IconContainer name="Rust">
      <Rust size="size-9" />
    </IconContainer>
  </div>

  <h3 class="text-xl font-medium mt-6 mb-4">Frameworks</h3>
  <div class="flex flex-wrap gap-5">
    <IconContainer name="React">
      <React size="size-9" />
    </IconContainer>
    <IconContainer name="Tailwind">
      <Tailwind size="size-9" />
    </IconContainer>
    <IconContainer name="Astro">
      <AstroIcon size="size-9" />
    </IconContainer>
    <IconContainer name="Angular">
      <Angular size="size-9" />
    </IconContainer>
    <IconContainer name="Express">
      <Express size="size-9" />
    </IconContainer>
    <IconContainer name="Nodejs">
      <Node size="size-9" />
    </IconContainer>
  </div>

  <h3 class="text-xl font-medium mt-6 mb-4">Bases de datos</h3>
  <div class="flex flex-wrap gap-5">
    <IconContainer name="MongoDB">
      <Mongodb size="size-9" />
    </IconContainer>
    <IconContainer name="MSSQL">
      <Mssql size="size-9" />
    </IconContainer>
    <IconContainer name="MySQL">
      <Mysql size="size-9" />
    </IconContainer>
    <IconContainer name="PostgreSQL">
      <Postgresql size="size-9" />
    </IconContainer>
  </div>

  <h3 class="text-xl font-medium mt-6 mb-4">Herramientas</h3>
  <div class="flex flex-wrap gap-5">
    <IconContainer name="Bash">
      <Bash size="size-9" />
    </IconContainer>
    <IconContainer name="Git">
      <Git size="size-9" />
    </IconContainer>
    <IconContainer name="Github">
      <Github size="size-9" />
    </IconContainer>
    <IconContainer name="VSCode">
      <Vscode size="size-9" />
    </IconContainer>
    <IconContainer name="Figma">
      <Figma size="size-9" />
    </IconContainer>
  </div>
</section>
